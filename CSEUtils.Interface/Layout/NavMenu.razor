<MudNavMenu>
    <MudNavLink Href="@GetPath("/")" Match="NavLinkMatch.All">Dashboard</MudNavLink>
    <MudNavGroup Title="Utilities" Expanded="true">
        <MudNavLink Href="@GetPath("/proposition")"  Match="NavLinkMatch.Prefix">Proposition</MudNavLink>
        <MudNavLink Href="@GetPath("/logic-simulator")"  Match="NavLinkMatch.Prefix">Logic Simulator</MudNavLink>
    </MudNavGroup>
    <MudNavLink Href="@GetPath("/about")"  Match="NavLinkMatch.Prefix">About</MudNavLink>
